/* pages/home/home.wxss */

.home-container {
  padding: 0;
  background: #F5F5F5;
  min-height: 100vh;
}

/* 顶部导航 */
.top-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  background: #FFFFFF;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-left, .nav-right {
  width: 60px;
  display: flex;
  align-items: center;
}

.nav-right {
  justify-content: flex-end;
}

.user-avatar {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  border: 2px solid #4A90E2;
}

.app-name {
  font-size: 18px;
  font-weight: 600;
  color: #2D3748;
}

.settings-icon {
  font-size: 24px;
  padding: 8px;
}

/* 卡片通用样式 */
.card {
  background: #FFFFFF;
  border-radius: 16px;
  margin: 12px 16px;
  padding: 20px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  border: 1px solid #F7FAFC;
}

.card-header {
  margin-bottom: 16px;
}

.card-title {
  font-size: 18px;
  font-weight: 600;
  color: #2D3748;
}

/* 今日目标卡片 */
.goal-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #FFFFFF;
  position: relative;
  overflow: hidden;
}

.goal-card::before {
  content: "";
  position: absolute;
  top: -50%;
  right: -50%;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
}

.goal-card .card-title {
  color: #FFFFFF;
  font-size: 20px;
}

.goal-content {
  position: relative;
  z-index: 1;
}

.goal-text {
  font-size: 16px;
  margin-bottom: 12px;
  display: block;
}

.progress-container {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 16px;
}

.progress {
  flex: 1;
  height: 8px;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4px;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 4px;
  transition: width 0.5s ease;
}

.progress-text {
  font-size: 14px;
  font-weight: 600;
  min-width: 50px;
}

.goal-card .btn {
  background: rgba(255, 255, 255, 0.2);
  color: #FFFFFF;
  border: 1px solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10px);
}

/* 学习概览卡片 */
.overview-content {
  
}

.stats-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-label {
  font-size: 14px;
  color: #718096;
  margin-bottom: 4px;
}

.stat-value {
  font-size: 18px;
  font-weight: 600;
  color: #2D3748;
}

/* 快速开始卡片 */
.quick-actions {
  
}

.action-grid {
  display: flex;
  gap: 16px;
  margin-bottom: 16px;
}

.action-grid:last-child {
  margin-bottom: 0;
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px 12px;
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  border-radius: 12px;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
}

.action-icon {
  font-size: 32px;
  margin-bottom: 8px;
}

.action-text {
  font-size: 14px;
  font-weight: 500;
  color: #2D3748;
}

/* 最近成就卡片 */
.achievements-content {
  
}

.achievement-list {
  margin-bottom: 16px;
}

.achievement-item {
  display: flex;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #F0F0F0;
}

.achievement-item:last-child {
  border-bottom: none;
}

.achievement-icon {
  font-size: 24px;
  margin-right: 12px;
}

.achievement-text {
  font-size: 16px;
  color: #2D3748;
  flex: 1;
}

/* 教材选择提示 */
.textbook-hint {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  text-align: center;
}

.hint-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hint-icon {
  font-size: 48px;
  margin-bottom: 12px;
}

.hint-text {
  font-size: 16px;
  color: #2D3748;
  margin-bottom: 16px;
}

/* 按钮样式 */
.btn {
  border-radius: 25px;
  font-size: 16px;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s ease;
  border: none;
  height: 44px;
  line-height: 44px;
  padding: 0 24px;
}

.btn-primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #FFFFFF;
  box-shadow: 0 4px 15px rgba(79, 172, 254, 0.4);
}

.btn-primary:active {
  transform: translateY(1px);
  box-shadow: 0 2px 8px rgba(79, 172, 254, 0.4);
}

.btn-secondary {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  color: #333333;
  font-weight: 500;
}

.btn-secondary:active {
  transform: translateY(1px);
}

/* 动画效果 */
.fade-in {
  animation: fadeInUp 0.6s ease-out;
}

.fade-in:nth-child(2) { animation-delay: 0.1s; }
.fade-in:nth-child(3) { animation-delay: 0.2s; }
.fade-in:nth-child(4) { animation-delay: 0.3s; }
.fade-in:nth-child(5) { animation-delay: 0.4s; }
.fade-in:nth-child(6) { animation-delay: 0.5s; }

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式适配 */
@media (max-width: 374px) {
  .card {
    margin: 8px 12px;
    padding: 16px;
  }
  
  .action-item {
    padding: 16px 8px;
  }
  
  .action-icon {
    font-size: 28px;
  }
  
  .action-text {
    font-size: 12px;
  }
  
  .stat-value {
    font-size: 16px;
  }
}

@media (min-width: 415px) {
  .card {
    margin: 16px 20px;
    padding: 24px;
  }
  
  .action-item {
    padding: 24px 16px;
  }
  
  .action-icon {
    font-size: 36px;
  }
}