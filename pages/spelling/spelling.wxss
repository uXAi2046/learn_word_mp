  border: 2px solid #4A90E2;
}

.action-btn.primary:active {
  background: #3182CE;
  border-color: #3182CE;
  transform: scale(0.95);
}

.action-btn.secondary {
  background: #F7FAFC;
  color: #4A5568;
  border: 2px solid #E2E8F0;
}

.action-btn.secondary:active {
  background: #EDF2F7;
  border-color: #CBD5E0;
  transform: scale(0.95);
}

.hint-btn:active {
  transform: scale(0.95);
}

