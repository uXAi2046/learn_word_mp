/* pages/spelling/spelling.wxss */
/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

/* 学习进度 */
.progress-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #2D3748;
}

.progress-percentage {
  font-size: 28rpx;
  color: #718096;
}

.progress-bar {
  height: 8rpx;
  background: #E2E8F0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4A90E2 0%, #357ABD 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}
/* 单词展示区域 */
.word-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.word-card {
  margin-bottom: 30rpx;
}

.word-hint {
  margin-bottom: 20rpx;
}

.hint-label {
  font-size: 28rpx;
  color: #718096;
  margin-bottom: 10rpx;
}

.hint-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #2D3748;
}

/* 音频播放区域 */
.audio-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.audio-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  background: #4A90E2;
  border-radius: 50%;
  color: white;
  font-size: 32rpx;
  box-shadow: 0 4px 16px rgba(74, 144, 226, 0.3);
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.audio-btn:active {
  transform: scale(0.95);
}

.audio-btn.playing {
  background: #E53E3E;
  animation: pulse 1s infinite;
}

.audio-btn.loading {
  background: #A0AEC0;
  cursor: not-allowed;
}

.loading-spinner {
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top: 3rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.audio-status {
  margin-bottom: 20rpx;
}

.status-text {
  font-size: 24rpx;
  color: #718096;
  font-weight: 500;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.audio-controls {
  display: flex;
  gap: 20rpx;
}

.control-btn {
  padding: 12rpx 24rpx;
  background: #F7FAFC;
  border-radius: 20rpx;
  color: #4A5568;
  font-size: 24rpx;
  border: 1px solid #E2E8F0;
  transition: all 0.3s ease;
}

.control-btn:active {
  background: #EDF2F7;
  transform: scale(0.95);
}

/* 拼写输入区域 */
.spelling-input-section {
  margin-bottom: 30rpx;
}

.input-container {
  position: relative;
  margin-bottom: 20rpx;
}

.spelling-input {
  width: 100%;
  height: 88rpx;
  background: #F7FAFC;
  border: 2px solid #E2E8F0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  text-align: center;
  color: #2D3748;
  box-sizing: border-box;
  transition: all 0.3s ease;
  position: relative;
}

.spelling-input:focus {
  border-color: #4A90E2;
  background: #FFFFFF;
  box-shadow: 0 0 0 3px rgba(74, 144, 226, 0.1);
  outline: none;
}

.spelling-input.normal {
  border-color: #E2E8F0;
  background: #F7FAFC;
  color: #2D3748;
}

.spelling-input.correct {
  border-color: #38A169;
  background: #F0FFF4;
  color: #22543D;
  box-shadow: 0 0 0 3px rgba(56, 161, 105, 0.1);
}

.spelling-input.correct::after {
  content: '✓';
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #38A169;
  font-size: 32rpx;
  font-weight: bold;
}

.spelling-input.incorrect {
  border-color: #E53E3E;
  background: #FED7D7;
  color: #742A2A;
  animation: shake 0.5s ease-in-out;
  box-shadow: 0 0 0 3px rgba(229, 62, 62, 0.1);
}

.spelling-input.incorrect::after {
  content: '✗';
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #E53E3E;
  font-size: 32rpx;
  font-weight: bold;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-8rpx); }
  75% { transform: translateX(8rpx); }
}

.input-length {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 20rpx;
  color: #A0AEC0;
}

/* 字母提示 */
.letter-hints {
  margin-top: 20rpx;
  background: #F8FAFC;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 1px solid #E2E8F0;
}

.hint-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.hint-title {
  font-size: 26rpx;
  color: #2D3748;
  font-weight: 600;
}

.hint-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #EDF2F7;
  border-radius: 50%;
  color: #718096;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.hint-close:active {
  background: #E2E8F0;
  transform: scale(0.95);
}

.letter-grid {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.letter-item {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  border: 2px solid #E2E8F0;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #4A5568;
  transition: all 0.3s ease;
  cursor: pointer;
}

.letter-item:hover {
  border-color: #CBD5E0;
  transform: translateY(-2rpx);
}

.letter-item.revealed {
  background: #4A90E2;
  color: white;
  border-color: #4A90E2;
  transform: scale(1.05);
}

.letter-item:active {
  transform: scale(0.95);
}

.hint-tip {
  text-align: center;
  font-size: 22rpx;
  color: #A0AEC0;
  font-style: italic;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-top: 30rpx;
}

.action-btn {
