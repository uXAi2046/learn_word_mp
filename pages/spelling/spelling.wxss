/* pages/spelling/spelling.wxss */

/* 页面容器 */
.spelling-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  color: white;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50rpx;
  color: white;
  font-size: 28rpx;
  backdrop-filter: blur(10rpx);
}

.back-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.help-btn {
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50rpx;
  color: white;
  font-size: 28rpx;
  backdrop-filter: blur(10rpx);
}

/* 页面区域 */
.progress-section {
  padding: 16px;
}

/* 学习进度 */
.progress-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.progress-percentage {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.progress-bar {
  height: 8rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #00d4aa 0%, #00a8ff 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}
/* 单词展示区域 */
.word-section {
  margin-bottom: 30rpx;
}

.word-card {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 40rpx;
  backdrop-filter: blur(10rpx);
}

.word-hint {
  text-align: center;
  margin-bottom: 30rpx;
}

.hint-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-right: 10rpx;
}

.hint-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

/* 音频播放区域 */
.audio-section {
  transition: width 0.3s ease;
}

.progress-text {
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

/* 单词卡片 */
.word-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 0;
  border: 1px solid #E2E8F0;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.word-hint {
  text-align: center;
  margin-bottom: 30rpx;
}

.hint-label {
  font-size: 24rpx;
  color: #718096;
  margin-right: 8rpx;
}

.hint-text {
  font-size: 28rpx;
  color: #2D3748;
  font-weight: 600;
}

/* 音频播放区域 */
.audio-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.audio-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  background: #4A90E2;
  border-radius: 50%;
  color: white;
  font-size: 32rpx;
  box-shadow: 0 4px 16px rgba(74, 144, 226, 0.3);
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.audio-btn:active {
  transform: scale(0.95);
}

.audio-btn.playing {
  background: #E53E3E;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.audio-controls {
  display: flex;
  gap: 20rpx;
}

.control-btn {
  padding: 12rpx 24rpx;
  background: #F7FAFC;
  border: 1px solid #E2E8F0;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #4A5568;
  transition: all 0.3s ease;
}

.control-btn:active {
  background: #EDF2F7;
  transform: scale(0.95);
}

/* 字母提示 */
.letter-hints {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 20rpx;
}

.letter-hint {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #495057;
  cursor: pointer;
  transition: all 0.3s ease;
}

.letter-hint.revealed {
  background: #4A90E2;
  color: white;
  border-color: #4A90E2;
  transform: scale(1.1);
}

.letter-hint:active {
  transform: scale(0.95);
}

/* 拼写输入区域 */
.spelling-input-section {
  margin-bottom: 30rpx;
}

.input-container {
  position: relative;
  margin-bottom: 20rpx;
}

.spelling-input {
  width: 100%;
  height: 88rpx;
  background: #F7FAFC;
  border: 2px solid #E2E8F0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  text-align: center;
  color: #2D3748;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.spelling-input:focus {
  border-color: #4A90E2;
  background: #FFFFFF;
  box-shadow: 0 0 0 3px rgba(74, 144, 226, 0.1);
}

.spelling-input.correct {
  border-color: #38A169;
  background: #F0FFF4;
  color: #22543D;
}

.spelling-input.incorrect {
  border-color: #E53E3E;
  background: #FED7D7;
  color: #742A2A;
  animation: shake 0.5s ease-in-out;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-8rpx); }
  75% { transform: translateX(8rpx); }
}

.input-length {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 20rpx;
  color: #A0AEC0;
}

/* 字母提示 */
.letter-hints {
  margin-top: 20rpx;
}

.hint-title {
  text-align: center;
  margin-bottom: 16rpx;
  font-size: 24rpx;
  color: #718096;
}

.letter-grid {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 12rpx;
}

.letter-item {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F7FAFC;
  border: 2px solid #E2E8F0;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #4A5568;
  transition: all 0.3s ease;
}

.letter-item.revealed {
  background: #4A90E2;
  color: white;
  border-color: #4A90E2;
  transform: scale(1.05);
}

.letter-item:active {
  transform: scale(0.95);
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-top: 30rpx;
}

.action-btn {
  flex: 1;
  max-width: 160rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: #4A90E2;
  color: white;
  border: 2px solid #4A90E2;
}

.action-btn.primary:active {
  background: #3182CE;
  border-color: #3182CE;
  transform: scale(0.95);
}

.action-btn.secondary {
  background: #F7FAFC;
  color: #4A5568;
  border: 2px solid #E2E8F0;
}

.action-btn.secondary:active {
  background: #EDF2F7;
  border-color: #CBD5E0;
  transform: scale(0.95);
}

.hint-btn:active {
  transform: scale(0.95);
}

.skip-btn {
  padding: 20rpx 40rpx;
  background: rgba(108, 117, 125, 0.8);
  border-radius: 50rpx;
  color: white;
  font-size: 28rpx;
}

.skip-btn:active {
  transform: scale(0.95);
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.submit-btn {
  flex: 1;
  height: 100rpx;
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  border-radius: 50rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(40, 167, 69, 0.3);
}

.submit-btn:active {
  transform: scale(0.98);
}

.submit-btn:disabled {
  background: #6c757d;
  box-shadow: none;
}

/* 练习统计 */
.stats-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  border: 1px solid #E2E8F0;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.stats-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3748;
  text-align: center;
  margin-bottom: 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.stat-item {
  text-align: center;
  padding: 16rpx;
  background: #F7FAFC;
  border-radius: 12rpx;
  border: 1px solid #E2E8F0;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #4A90E2;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #718096;
}

/* 结果弹窗 */
.result-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.result-content {
  width: 600rpx;
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(-50rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.result-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.result-icon.correct {
  color: #28a745;
}

.result-icon.incorrect {
  color: #dc3545;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.result-title.correct {
  color: #28a745;
}

.result-title.incorrect {
  color: #dc3545;
}

.result-word {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.error-analysis {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  text-align: left;
}

.analysis-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.analysis-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

.play-audio-btn {
  flex: 1;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  color: white;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.next-btn {
  flex: 1;
  height: 80rpx;
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  border-radius: 16rpx;
  color: white;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 完成练习弹窗 */
.complete-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.complete-content {
  width: 640rpx;
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  animation: modalSlideIn 0.3s ease-out;
}

.complete-icon {
  font-size: 120rpx;
  color: #ffc107;
  margin-bottom: 30rpx;
}

.complete-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.complete-stats {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.complete-stat {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.complete-stat:last-child {
  margin-bottom: 0;
}

.stat-name {
  color: #666;
}

.stat-data {
  font-weight: bold;
  color: #333;
}

.achievements {
  margin-bottom: 40rpx;
}

.achievements-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.achievement-list {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 20rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50rpx;
  color: white;
  font-size: 24rpx;
}

.achievement-icon {
  margin-right: 8rpx;
}

.complete-actions {
  display: flex;
  gap: 20rpx;
}

.restart-btn {
  flex: 1;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  color: white;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-detail-btn {
  flex: 1;
  height: 80rpx;
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  border-radius: 16rpx;
  color: white;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 帮助弹窗 */
.help-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.help-content {
  width: 640rpx;
  max-height: 80vh;
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  animation: modalSlideIn 0.3s ease-out;
  overflow-y: auto;
}

.help-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.help-section {
  margin-bottom: 40rpx;
}

.help-section:last-child {
  margin-bottom: 0;
}

.help-subtitle {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 20rpx;
}

.help-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.help-close {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  color: white;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .container {
    padding: 15rpx;
  }
  
  .progress-card,
  .word-display,
  .spelling-input,
  .stats-card {
    padding: 30rpx;
  }
  
  .result-content,
  .complete-content,
  .help-content {
    width: 90%;
    padding: 40rpx 30rpx;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .progress-card,
  .word-display,
  .spelling-input,
  .stats-card {
    background: rgba(40, 44, 52, 0.95);
    color: #e6e6e6;
  }
  
  .progress-title,
  .word-meaning,
  .input-label,
  .stats-title,
  .stat-value {
    color: #e6e6e6;
  }
  
  .spelling-field {
    background: #2c3e50;
    border-color: #34495e;
    color: #e6e6e6;
  }
  
  .spelling-field:focus {
    background: #34495e;
  }
}