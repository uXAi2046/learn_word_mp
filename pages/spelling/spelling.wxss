/* pages/spelling/spelling.wxss */
/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

/* 学习进度 */
.progress-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #2D3748;
}

.progress-percentage {
  font-size: 28rpx;
  color: #718096;
}

.progress-bar {
  height: 8rpx;
  background: #E2E8F0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4A90E2 0%, #357ABD 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}
/* 单词展示区域 */
.word-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.word-card {
  margin-bottom: 30rpx;
}

.word-hint {
  margin-bottom: 20rpx;
}

.hint-label {
  font-size: 28rpx;
  color: #718096;
  margin-bottom: 10rpx;
}

.hint-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #2D3748;
}

/* 音频播放区域 */
.audio-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.audio-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  background: #4A90E2;
  border-radius: 50%;
  color: white;
  font-size: 32rpx;
  box-shadow: 0 4px 16px rgba(74, 144, 226, 0.3);
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.audio-btn:active {
  transform: scale(0.95);
}

.audio-btn.playing {
  background: #E53E3E;
  animation: pulse 1s infinite;
}

.audio-btn.loading {
  background: #A0AEC0;
  cursor: not-allowed;
}

.loading-spinner {
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top: 3rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.audio-status {
  margin-bottom: 20rpx;
}

.status-text {
  font-size: 24rpx;
  color: #718096;
  font-weight: 500;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.audio-controls {
  display: flex;
  gap: 20rpx;
}

.control-btn {
  padding: 12rpx 24rpx;
  background: #F7FAFC;
  border-radius: 20rpx;
  color: #4A5568;
  font-size: 24rpx;
  border: 1px solid #E2E8F0;
  transition: all 0.3s ease;
}

.control-btn:active {
  background: #EDF2F7;
  transform: scale(0.95);
}

/* 拼写输入区域 */
.spelling-input-section {
  margin-bottom: 30rpx;
}

.input-container {
  position: relative;
  margin-bottom: 20rpx;
}

.spelling-input {
  width: 100%;
  height: 88rpx;
  background: #F7FAFC;
  border: 2px solid #E2E8F0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  text-align: center;
  color: #2D3748;
  box-sizing: border-box;
  transition: all 0.3s ease;
  position: relative;
}

.spelling-input:focus {
  border-color: #4A90E2;
  background: #FFFFFF;
  box-shadow: 0 0 0 3px rgba(74, 144, 226, 0.1);
  outline: none;
}

.spelling-input.normal {
  border-color: #E2E8F0;
  background: #F7FAFC;
  color: #2D3748;
}

.spelling-input.correct {
  border-color: #38A169;
  background: #F0FFF4;
  color: #22543D;
  box-shadow: 0 0 0 3px rgba(56, 161, 105, 0.1);
}

.spelling-input.correct::after {
  content: '✓';
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #38A169;
  font-size: 32rpx;
  font-weight: bold;
}

.spelling-input.incorrect {
  border-color: #E53E3E;
  background: #FED7D7;
  color: #742A2A;
  animation: shake 0.5s ease-in-out;
  box-shadow: 0 0 0 3px rgba(229, 62, 62, 0.1);
}

.spelling-input.incorrect::after {
  content: '✗';
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #E53E3E;
  font-size: 32rpx;
  font-weight: bold;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-8rpx); }
  75% { transform: translateX(8rpx); }
}

.input-length {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 20rpx;
  color: #A0AEC0;
}

/* 字母提示 */
.letter-hints {
  margin-top: 20rpx;
  background: #F8FAFC;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 1px solid #E2E8F0;
}

.hint-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.hint-title {
  font-size: 26rpx;
  color: #2D3748;
  font-weight: 600;
}

.hint-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #EDF2F7;
  border-radius: 50%;
  color: #718096;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.hint-close:active {
  background: #E2E8F0;
  transform: scale(0.95);
}

.letter-grid {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.letter-item {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  border: 2px solid #E2E8F0;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #4A5568;
  transition: all 0.3s ease;
  cursor: pointer;
}

.letter-item:hover {
  border-color: #CBD5E0;
  transform: translateY(-2rpx);
}

.letter-item.revealed {
  background: #4A90E2;
  color: white;
  border-color: #4A90E2;
  transform: scale(1.05);
}

.letter-item:active {
  transform: scale(0.95);
}

.hint-tip {
  text-align: center;
  font-size: 22rpx;
  color: #A0AEC0;
  font-style: italic;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-top: 30rpx;
}

.action-btn {
  flex: 1;
  max-width: 160rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: #4A90E2;
  color: white;
  border: 2px solid #4A90E2;
}

.action-btn.primary:active {
  background: #3182CE;
  border-color: #3182CE;
  transform: scale(0.95);
}

.action-btn.secondary {
  background: #F7FAFC;
  color: #4A5568;
  border: 2px solid #E2E8F0;
}

.action-btn.secondary:active {
  background: #EDF2F7;
  border-color: #CBD5E0;
  transform: scale(0.95);
}

.hint-btn:active {
  transform: scale(0.95);
}

.skip-btn {
  padding: 20rpx 40rpx;
  background: rgba(108, 117, 125, 0.8);
  border-radius: 50rpx;
  color: white;
  font-size: 28rpx;
}

.skip-btn:active {
  transform: scale(0.95);
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.submit-btn {
  flex: 1;
  height: 100rpx;
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  border-radius: 50rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(40, 167, 69, 0.3);
}

.submit-btn:active {
  transform: scale(0.98);
}

.submit-btn:disabled {
  background: #6c757d;
  box-shadow: none;
}

/* 练习统计 */
.stats-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  border: 1px solid #E2E8F0;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.stats-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3748;
  text-align: center;
  margin-bottom: 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.stat-item {
  text-align: center;
  padding: 16rpx;
  background: #F7FAFC;
  border-radius: 12rpx;
  border: 1px solid #E2E8F0;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #4A90E2;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #718096;
}

/* 结果反馈弹窗样式优化 */
.result-overlay, .complete-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.7) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  backdrop-filter: blur(8rpx);
}

.result-overlay.show, .complete-overlay.show {
  opacity: 1;
  visibility: visible;
}

.result-popup, .complete-popup {
  width: 90%;
  max-width: 680rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 
    0 32rpx 64rpx rgba(0, 0, 0, 0.15),
    0 16rpx 32rpx rgba(0, 0, 0, 0.1),
    0 8rpx 16rpx rgba(0, 0, 0, 0.05);
  transform: scale(0.8) translateY(40rpx);
  transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  overflow: hidden;
  max-height: 85vh;
  overflow-y: auto;
  position: relative;
}

.result-overlay.show .result-popup,
.complete-overlay.show .complete-popup {
  transform: scale(1) translateY(0);
}

/* 弹窗装饰元素 */
.result-popup::before, .complete-popup::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4, #feca57);
  background-size: 300% 100%;
  animation: gradientShift 3s ease-in-out infinite;
}

@keyframes gradientShift {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

/* 结果弹窗特定样式 */
.result-popup.correct::before {
  background: linear-gradient(90deg, #4caf50, #66bb6a, #81c784);
}

.result-popup.incorrect::before {
  background: linear-gradient(90deg, #f44336, #ef5350, #e57373);
}

/* 内容区域间距优化 */
.result-popup .popup-header,
.result-popup .popup-content,
.result-popup .popup-actions,
.complete-popup .popup-header,
.complete-popup .popup-content,
.complete-popup .popup-actions {
  margin-bottom: 24rpx;
}

.result-popup .popup-actions,
.complete-popup .popup-actions {
  margin-bottom: 0;
}

/* 答案卡片优化 */
.answer-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 
    0 8rpx 24rpx rgba(0, 0, 0, 0.08),
    0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  border: 2rpx solid #e9ecef;
  position: relative;
  overflow: hidden;
}

.answer-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #007bff, #6610f2, #6f42c1);
}

.word-display {
  text-align: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.word-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
  margin-bottom: 8rpx;
  letter-spacing: 2rpx;
}

.word-phonetic {
  font-size: 28rpx;
  color: #6c757d;
  display: block;
  font-style: italic;
}

.word-meaning {
  text-align: center;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #e3f2fd 0%, #f3e5f5 100%);
  border-radius: 12rpx;
  border-left: 6rpx solid #2196f3;
}

.word-meaning text {
  font-size: 26rpx;
  color: #37474f;
  line-height: 1.6;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .result-popup, .complete-popup {
    width: 95%;
    padding: 24rpx;
    border-radius: 24rpx;
  }
  
  .word-text {
    font-size: 40rpx;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
    gap: 12rpx;
  }
  
  .stat-item {
    padding: 16rpx;
  }
}

/* 滚动条样式 */
.result-popup::-webkit-scrollbar,
.complete-popup::-webkit-scrollbar {
  width: 6rpx;
}

.result-popup::-webkit-scrollbar-track,
.complete-popup::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 3rpx;
}

.result-popup::-webkit-scrollbar-thumb,
.complete-popup::-webkit-scrollbar-thumb {
  background: linear-gradient(135deg, #007bff, #0056b3);
  border-radius: 3rpx;
}

.result-popup::-webkit-scrollbar-thumb:hover,
.complete-popup::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(135deg, #0056b3, #004085);
}

/* 加载状态优化 */
.result-popup.loading,
.complete-popup.loading {
  pointer-events: none;
}

.result-popup.loading::after,
.complete-popup.loading::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 40rpx;
  height: 40rpx;
  margin: -20rpx 0 0 -20rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007bff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 无障碍访问优化 */
.result-popup[aria-hidden="true"],
.complete-popup[aria-hidden="true"] {
  display: none;
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .result-popup, .complete-popup {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
    color: #ecf0f1;
  }
  
  .answer-card {
    background: linear-gradient(135deg, #34495e 0%, #2c3e50 100%);
    border-color: #4a5568;
  }
  
  .word-text {
    color: #ecf0f1;
  }
  
  .word-phonetic {
    color: #bdc3c7;
  }
  
  .word-meaning {
    background: linear-gradient(135deg, #3a4a5c 0%, #2d3748 100%);
    color: #e2e8f0;
  }
}

/* 结果反馈弹窗样式优化 */

/* 结果状态区域 */
.result-status {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.result-status.correct {
  background: linear-gradient(135deg, #e8f5e8 0%, #f0f9f0 100%);
  border: 2rpx solid #4caf50;
}

.result-status.incorrect {
  background: linear-gradient(135deg, #ffeaea 0%, #fff5f5 100%);
  border: 2rpx solid #f44336;
}

.status-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  position: relative;
  overflow: hidden;
}

.status-icon.correct {
  background: linear-gradient(135deg, #4caf50 0%, #66bb6a 100%);
  box-shadow: 0 8rpx 20rpx rgba(76, 175, 80, 0.3);
}

.status-icon.incorrect {
  background: linear-gradient(135deg, #f44336 0%, #ef5350 100%);
  box-shadow: 0 8rpx 20rpx rgba(244, 67, 54, 0.3);
}

.status-icon .icon-text {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.status-text {
  flex: 1;
}

.status-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.status-subtitle {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 答案对比样式优化 */
.answer-comparison {
  margin: 20px 0;
  border-radius: 12rpx;
  overflow: hidden;
  border: 2rpx solid #f0f0f0;
}

.comparison-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.comparison-item:last-child {
  border-bottom: none;
}

.user-answer-item {
  background: linear-gradient(135deg, #fff3e0 0%, #ffeaa7 100%);
}

.correct-answer-item {
  background: linear-gradient(135deg, #e8f5e8 0%, #a8e6a3 100%);
}

.comparison-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.comparison-value {
  font-size: 28rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.user-answer {
  background: #ff9800;
  color: white;
}

.correct-answer {
  background: #4caf50;
  color: white;
}

/* 错误分析样式优化 */
.error-analysis {
  margin-top: 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 12rpx;
  padding: 20rpx;
  border: 2rpx solid #dee2e6;
}

.analysis-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.analysis-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.analysis-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #495057;
}

.analysis-point {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.point-icon {
  color: #6c757d;
  margin-right: 12rpx;
  margin-top: 4rpx;
  font-size: 20rpx;
}

.point-text {
  flex: 1;
  font-size: 24rpx;
  color: #495057;
  line-height: 1.5;
}

/* 操作按钮样式优化 */
.result-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #f0f0f0;
}

.action-button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.action-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.action-button:active::before {
  left: 100%;
}

.action-button.secondary {
  background: linear-gradient(135deg, #6c757d 0%, #868e96 100%);
  color: white;
  box-shadow: 0 6rpx 16rpx rgba(108, 117, 125, 0.3);
}

.action-button.secondary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(108, 117, 125, 0.4);
}

.action-button.primary {
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  color: white;
  box-shadow: 0 6rpx 16rpx rgba(0, 123, 255, 0.3);
}

.action-button.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 123, 255, 0.4);
}

.button-icon {
  margin-right: 12rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
}

.audio-icon {
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.next-icon {
  animation: slideRight 1.5s infinite;
}

@keyframes slideRight {
  0%, 100% { transform: translateX(0); }
  50% { transform: translateX(4rpx); }
}

.button-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 练习完成弹窗样式优化 */
.complete-status {
  text-align: center;
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
  border-radius: 16rpx;
  border: 2rpx solid #ff9800;
}

.complete-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16rpx;
  position: relative;
  overflow: hidden;
}

.complete-icon.success {
  background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%);
  box-shadow: 0 12rpx 24rpx rgba(255, 152, 0, 0.4);
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-10rpx); }
  60% { transform: translateY(-5rpx); }
}

.complete-icon .icon-text {
  font-size: 48rpx;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.complete-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.complete-subtitle {
  font-size: 26rpx;
  color: #666;
  display: block;
}

/* 练习统计样式优化 */
.practice-stats {
  margin-bottom: 32rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid #dee2e6;
}

.stats-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.stats-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #495057;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.stat-item {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
  position: relative;
  overflow: hidden;
}

.stat-item:active {
  transform: scale(0.95);
}

.stat-item.correct {
  border-left: 6rpx solid #4caf50;
}

.stat-item.incorrect {
  border-left: 6rpx solid #f44336;
}

.stat-item.accuracy {
  border-left: 6rpx solid #2196f3;
}

.stat-item.time {
  border-left: 6rpx solid #ff9800;
}

.stat-icon {
  font-size: 28rpx;
  margin-bottom: 8rpx;
  display: block;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 成就徽章样式优化 */
.achievement-section {
  margin-bottom: 32rpx;
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid #2196f3;
}

.achievement-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.achievement-header-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.achievement-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1976d2;
}

.achievement-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  justify-content: center;
}

.achievement-badge {
  background: white;
  border-radius: 12rpx;
  padding: 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.2);
  min-width: 120rpx;
  transition: transform 0.3s ease;
}

.achievement-badge:active {
  transform: scale(0.95);
}

.badge-icon {
  margin-bottom: 8rpx;
}

.badge-emoji {
  font-size: 32rpx;
  display: block;
}

.badge-name {
  font-size: 22rpx;
  color: #1976d2;
  font-weight: 500;
}

/* 完成弹窗操作按钮样式优化 */
.complete-actions {
  display: flex;
  gap: 16rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #f0f0f0;
}

.complete-button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.complete-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.complete-button:active::before {
  left: 100%;
}

.complete-button.secondary {
  background: linear-gradient(135deg, #6c757d 0%, #868e96 100%);
  color: white;
  box-shadow: 0 6rpx 16rpx rgba(108, 117, 125, 0.3);
}

.complete-button.secondary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(108, 117, 125, 0.4);
}

.complete-button.primary {
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  color: white;
  box-shadow: 0 6rpx 16rpx rgba(40, 167, 69, 0.3);
}

.complete-button.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(40, 167, 69, 0.4);
}

.restart-icon {
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.back-icon {
  animation: slideLeft 1.5s infinite;
}

@keyframes slideLeft {
  0%, 100% { transform: translateX(0); }
  50% { transform: translateX(-4rpx); }
}

/* 帮助弹窗 */
.help-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.help-content {
  width: 640rpx;
  max-height: 80vh;
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  animation: modalSlideIn 0.3s ease-out;
  overflow-y: auto;
}

.help-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.help-section {
  margin-bottom: 40rpx;
}

.help-section:last-child {
  margin-bottom: 0;
}

.help-subtitle {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 20rpx;
}

.help-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.help-close {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  color: white;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .container {
    padding: 15rpx;
  }
  
  .progress-card,
  .word-display,
  .spelling-input,
  .stats-card {
    padding: 30rpx;
  }
  
  .result-content,
  .complete-content,
  .help-content {
    width: 90%;
    padding: 40rpx 30rpx;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .progress-card,
  .word-display,
  .spelling-input,
  .stats-card {
    background: rgba(40, 44, 52, 0.95);
    color: #e6e6e6;
  }
  
  .progress-title,
  .word-meaning,
  .input-label,
  .stats-title,
  .stat-value {
    color: #e6e6e6;
  }
  
  .spelling-field {
    background: #2c3e50;
    border-color: #34495e;
    color: #e6e6e6;
  }
  
  .spelling-field:focus {
    background: #34495e;
  }
}