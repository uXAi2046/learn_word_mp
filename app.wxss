/* 全局样式 - 基于UI设计规范 */

/* 基础重置 */
page {
  background-color: #F5F5F5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  color: #262626;
  line-height: 1.5;
}

/* 容器样式 */
.container {
  padding: 16px;
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background: #FFFFFF;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  border: 1px solid #F7FAFC;
  transition: all 0.3s ease;
}

.card:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
}

/* 按钮样式 */
.btn {
  border-radius: 8px;
  font-size: 16px;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s ease;
  border: none;
  height: 44px;
  line-height: 44px;
  min-width: 100px;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #FFFFFF;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
}

.btn-secondary {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  color: #333333;
  font-weight: 500;
}

/* 文字样式 */
.text-title {
  font-size: 24px;
  font-weight: 700;
  color: #2D3748;
  line-height: 1.2;
  margin-bottom: 8px;
}

.text-subtitle {
  font-size: 18px;
  font-weight: 600;
  color: #4A5568;
  line-height: 1.3;
  margin-bottom: 6px;
}

.text-body {
  font-size: 16px;
  font-weight: 400;
  color: #2D3748;
  line-height: 1.5;
  margin-bottom: 4px;
}

.text-helper {
  font-size: 14px;
  font-weight: 400;
  color: #718096;
  line-height: 1.4;
}

.text-small {
  font-size: 12px;
  color: #8C8C8C;
}

/* 进度条样式 */
.progress {
  width: 100%;
  height: 8px;
  background: #E2E8F0;
  border-radius: 4px;
  overflow: hidden;
  margin: 8px 0;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 4px;
  transition: width 0.5s ease;
  position: relative;
}

.progress-bar::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent 0%, rgba(255,255,255,0.3) 50%, transparent 100%);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

/* 图标样式 */
.icon {
  width: 24px;
  height: 24px;
  color: #4A5568;
  transition: all 0.3s ease;
}

.icon:hover {
  color: #667eea;
  transform: scale(1.1);
}

/* 徽章样式 */
.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 60px;
  height: 60px;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 50%;
  color: #FFFFFF;
  font-size: 24px;
  font-weight: 600;
  box-shadow: 0 4px 15px rgba(240, 147, 251, 0.4);
  position: relative;
}

.badge::before {
  content: "";
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  border-radius: 50%;
  z-index: -1;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 20px;
}

.loading-icon {
  font-size: 32px;
  margin-bottom: 16px;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
}

.empty-icon {
  font-size: 48px;
  margin-bottom: 16px;
  opacity: 0.6;
}

/* 响应式适配 */
@media (max-width: 374px) {
  .card { padding: 12px; }
  .btn { height: 40px; line-height: 40px; font-size: 14px; }
  .text-title { font-size: 20px; }
  .container { padding: 12px; }
}

@media (min-width: 415px) {
  .card { padding: 20px; }
  .btn { height: 48px; line-height: 48px; }
  .text-title { font-size: 26px; }
  .container { padding: 20px; }
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

/* 工具类 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  align-items: center;
  justify-content: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-wrap {
  flex-wrap: wrap;
}

.text-center {
  text-align: center;
}

